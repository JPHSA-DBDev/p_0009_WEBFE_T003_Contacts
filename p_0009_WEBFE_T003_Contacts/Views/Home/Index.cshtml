@section scripts {
    <script>


        $(document).ready(function() {
            // Hook events on buttons and anchors
            buildClickEvents();

        });

        // Hook events on buttons and anchors
        function buildClickEvents() {


            $("[data-pdsa-action]").on("click",
                function(e) {
                    e.preventDefault();

                    $("#EventCommand").val(
                        $(this).data("pdsa-action"));


                    $("#EventArgument").val(
                        $(this).attr("data-pdsa-val"));


                    //$("form").submit();

                    if ($(this).is('#theDeleteButton')) {
                        if (confirm("Are you sure(2)?")) {
                            $("form").submit();
                        }
                        return false;
                    } else {
                        $("form").submit();
                        return true;
                    }

                }
            );
        };
    </script>
}
